{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake .. -G \"MinGW Makefiles\" "
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "mingw32-make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
     ]
}